From 0000000000000000000000000000000000000000 Mon Sep 17 00:00:00 2001
From: ishland <ishlandmc@yeah.net>
Date: Sat, 21 Nov 2020 18:33:42 +0800
Subject: [PATCH] Hotpur Buildscript Changes


diff --git a/build.gradle b/build.gradle
new file mode 100644
index 0000000000000000000000000000000000000000..b80dec0d16227d8e89fbb6ce3ad2ef951cafcb53
--- /dev/null
+++ b/build.gradle
@@ -0,0 +1,39 @@
+/*
+ * This file was generated by the Gradle 'init' task.
+ */
+
+dependencies {
+    api 'commons-lang:commons-lang:2.6'
+    api 'com.google.code.findbugs:jsr305:1.3.9'
+    api 'com.googlecode.json-simple:json-simple:1.1.1'
+    api 'com.google.guava:guava:21.0'
+    api 'com.google.code.gson:gson:2.8.0'
+    api 'net.md-5:bungeecord-chat:1.16-R0.3'
+    api 'org.yaml:snakeyaml:1.26'
+    api 'org.slf4j:slf4j-api:1.7.25'
+    api 'org.ow2.asm:asm:8.0.1'
+    api 'org.ow2.asm:asm-commons:8.0.1'
+    api 'it.unimi.dsi:fastutil:8.2.2'
+    api 'org.jetbrains:annotations-java5:19.0.0'
+    testImplementation 'org.hamcrest:hamcrest-library:1.3'
+    testImplementation 'org.ow2.asm:asm-tree:8.0.1'
+}
+
+description = 'Hotpur-API'
+
+java {
+    withJavadocJar()
+}
+
+javadoc {
+    options {
+        // Disable the crazy super-strict doclint tool in Java 8
+        addStringOption('Xdoclint:none', '-quiet')
+    }
+}
+
+shadowJar {
+    exclude "META-INF/MANIFEST.MF"
+}
+
+assemble.dependsOn(shadowJar)
